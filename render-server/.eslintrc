{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
      "plugin:import/errors",
      "plugin:import/warnings",
      "prettier"
    ],
  "plugins": [
      "prettier"
  ],
  "globals": {
    "global": true,
    "process": true,
    "require": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true
      }
    ],
    "import/extensions": ["error", "never"],
    "no-param-reassign": ["error", { "props": false }],
    "no-undef": ["error"],
    "no-underscore-dangle": "off",
    "import/order": ["error", {
      "groups": [["builtin", "external"], ["type"], ["internal"], ["index", "sibling"]],
      "newlines-between": "always",
      "pathGroups": [
        {
          "pattern": "{app}/**",
          "group": "internal"
        }, {
          "pattern": "types/**",
          "group": "type"
        }, {
          "pattern": "types",
          "group": "type"
        }
      ],
      "pathGroupsExcludedImportTypes": []
    }]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["app", "./app/src"]
        ],
        "extensions": [".ts", ".js", ".jsx", ".tsx", ".json"]
      }
    }
  }
}