{
  "overrides": [
    {
      "files": [ "app/**/*.js" ]
    }
  ],
  "env": {
      "browser": true,
      "es2021": true
  },
  "settings": {
      "react": {
          "version": "detect"
      }
  },
  "extends": [
      "plugin:react/recommended",
      "eslint-config-prettier"
  ],
  "parserOptions": {
      "parser": "babel-eslint",
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": [
      "react",
      "eslint-plugin-prettier"
  ],
  "rules": {
    "prettier/prettier": "warn",
    "react/no-unescaped-entities": 0,
    "react/prop-types": 0,
    "no-unused-vars": ["warn", {
      "vars": "all",
      "args": "after-used",
      "ignoreRestSiblings": false,
      "varsIgnorePattern": "^_",
      "argsIgnorePattern": "^_"
    }],
    "no-undef": "error"
  }
}